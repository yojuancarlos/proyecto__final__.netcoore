@model IEnumerable<AirBnbUdC.GUI.Models.Parameters.CountryModel>

@{
    ViewBag.Title = "Pais";
}

<h2>Pais</h2>

<style>
    body {
        background-image: url('/Content/Background.jpeg') !important;
        background-repeat: no-repeat !important;
        background-size: cover !important;
    }

    main {
        background-color: rgba(255, 255, 255, 0.8); /* Fondo semitransparente para que el texto sea legible */
        padding: 20px;
    }
</style>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-circle" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-success btn-circle">
                        Edit
                    </a>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary btn-circle">
                        Details
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-circle">
                        Delete
                    </a>
                </div>
            </td>
        </tr>
    }
</table>