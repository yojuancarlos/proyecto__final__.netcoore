@model AirBnbUdC.GUI.Models.Parameters.CityModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<style>
    body {
        background-image: url('/Content/Background.jpeg') !important;
        background-repeat: no-repeat !important;
        background-size: cover !important;
    }

    main {
        background-color: rgba(255, 255, 255, 0.8); /* Fondo semitransparente para que el texto sea legible */
        padding: 20px;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>CityModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-4">
                @Html.LabelFor(model => model.Country.Id)
                @Html.DropDownListFor(model => model.Country.Id, new SelectList(Model.CountryList, "Id", "Name"), new { @class = "form-control selectpicker border", @id = "selRegion", @data_live_search = "true" })
                @Html.ValidationMessageFor(model => model.Country.Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<style>
    .circular-button {
        width: 90px;
        height: 50px;
        border-radius: 50%;
        text-align: center;
        line-height: 50px; /* Ajusta la altura para centrar verticalmente el texto */
        font-size: 14px;
        font-weight: bold;
        text-decoration: none;
        display: inline-block;
        margin-right: 5px;
        background-color: red; /* Color de fondo rojo */
        color: white; /* Color del texto en blanco para que se destaque */
    }
</style>
<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger" })
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
